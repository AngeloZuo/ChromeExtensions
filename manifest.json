{
    "manifest_version": 2,
 
    "name": "PDF_HTML_Comparison",
    "description": "PDF or HTML Comparison",
    "version": "0.1.0",
 
    "browser_action": {
        "default_icon": "icons/icon19.png",
        // "default_popup": "index.html",
        "default_title": "PDF_HTML_Comparison"
    },
 
    "icons": { 
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
 
    "permissions": [
        "http://*/",
        "https://*/",
        "activeTab",
        "tabs"
    ],
 
    "content_security_policy": "script-src 'self' https://www.baidu.com https://www.google.com; object-src 'self'",
    "content_scripts": [],
    "background": {
        "scripts": [
            "library/background.js"
        ]
    }
}